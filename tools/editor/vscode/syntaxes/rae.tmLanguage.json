{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmLanguage.json",
  "name": "Rae",
  "patterns": [
    { "include": "#comments" },
    { "include": "#keywords" },
    { "include": "#enums" },
    { "include": "#strings" },
    { "include": "#constants" },
    { "include": "#storage" },
    { "include": "#function_declaration" },
    { "include": "#function_call" },
    { "include": "#variables" },
    { "include": "#operators" },
    { "include": "#punctuation" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.block.rae",
          "begin": "#\\\*",
          "end": "\\*#"
        },
        {
          "name": "comment.line.number-sign.rae",
          "match": "#.*$"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.rae",
          "match": "\\b(if|else|loop|in|match|case|default|ret|spawn|import|export|extern|is)\\b"
        },
        {
          "name": "keyword.operator.logical.rae",
          "match": "\\b(and|or|not)\\b"
        }
      ]
    },
    "enums": {
      "patterns": [
        {
          "match": "\\b([A-Z][a-zA-Z0-9_]*)\\.([a-zA-Z0-9_]+)\\b",
          "captures": {
            "1": { "name": "storage.type.rae" },
            "2": { "name": "variable.other.enum.rae" }
          }
        }
      ]
    },
    "storage": {
      "patterns": [
        {
          "name": "keyword.declaration.rae",
          "match": "\\b(type|enum|func|def|pack)\\b"
        },
        {
          "name": "storage.type.rae",
          "match": "\\b(Int|Float|Bool|String|Char|List|Array)\\b"
        },
        {
          "name": "storage.modifier.rae",
          "match": "\\b(view|mod|opt|own|pub|priv)\\b"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.rae",
          "match": "\\b(true|false|none)\\b"
        },
        {
          "name": "constant.numeric.float.rae",
          "match": "\\b[0-9]+\\.[0-9]+\\b"
        },
        {
          "name": "constant.numeric.integer.rae",
          "match": "\\b[0-9]+\\b"
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double.rae",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.rae",
          "match": "\\."
        },
        {
          "begin": "\\{",
          "end": "\\}",
          "beginKeywords": "punctuation.section.interpolation.begin.rae",
          "endKeywords": "punctuation.section.interpolation.end.rae",
          "patterns": [
            { "include": "$self" }
          ]
        }
      ]
    },
    "function_declaration": {
      "patterns": [
        {
          "match": "\\b(func)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\b",
          "captures": {
            "1": { "name": "keyword.declaration.rae" },
            "2": { "name": "entity.name.function.rae" }
          }
        }
      ]
    },
    "function_call": {
      "patterns": [
        {
          "name": "variable.function.rae",
          "match": "([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()"
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.parameter.rae",
          "match": "([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=:)"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.assignment.rae",
          "match": "=>|="
        },
        {
          "name": "keyword.operator.arithmetic.rae",
          "match": "\\+\\+|--|\\+|-|\\*|/|%"
        },
        {
          "name": "keyword.operator.comparison.rae",
          "match": "<=|>=|<|>"
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.section.rae",
          "match": "\\(|\\)|\[|\]|\\{|\\}"
        },
        {
          "name": "punctuation.separator.rae",
          "match": ",|:|\\."
        }
      ]
    }
  },
  "scopeName": "source.rae"
}
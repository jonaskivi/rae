type State {
  direction: Bool
  radius: Int
}

func main() {
  let s: State = { direction: false, radius: -15 }
  let dir: mod Bool => s.direction
  let rad: mod Int => s.radius
  
  if dir is false {
    log("dir is false")
  }
  
  if rad <= -10 {
    log("rad is low")
  }
  
  dir = true
  if dir {
    log("dir is now true")
  }
}

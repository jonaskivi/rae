{
  "language": "rae",
  "description": "Rae language lexical summary for syntax highlighters",
  "keywords": [
    "type", "enum", "func", "let", "ret", "spawn",
    "view", "mod", "opt",
    "if", "else", "loop", "in", "match", "case",
    "true", "false", "none",
    "and", "or", "not", "is",
    "pub", "priv", "pack",
    "import", "export", "extern", "default",
    "Int", "Float", "Bool", "String", "Char"
  ],
  "operators": [
    "=", "=>", "+", "-", "*", "/", "%", "++", "--",
    "<", ">", "<=", ">=", "and", "or", "not", "is"
  ],
  "punctuation": [
    "(", ")", "{", "}", "[", "]",
    ",", ":", "."
  ],
  "comments": {
    "line": "#",
    "block_start": "#[",
    "block_end": "]#"
  },
  "literals": {
    "integer": "0 | [1-9][0-9]*",
    "float": "[0-9]+\\.[0-9]+",
    "string": {
      "quote": "\"",
      "escapes": ["\\n", "\\t", "\\\\", "\\\""]
    },
    "raw_string": {
      "prefix": "r",
      "hashes": "#",
      "quote": "\""
    },
    "booleans": ["true", "false"],
    "none": "none"
  },
  "identifiers": "[a-zA-Z_][a-zA-Z0-9_]*",
  "notes": "Whitespace is insignificant; no semicolons. Use `=` for value copy, `=>` for alias binding (mod/view)."
}

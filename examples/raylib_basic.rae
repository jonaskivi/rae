import "lib/raylib.rae"

func game_frame() {
    BeginDrawing()
    ClearBackground(r: 255, g: 255, b: 255, a: 255)
    DrawText(text: "Hello from Rae + Raylib!", x: 190, y: 200, fontSize: 20, r: 200, g: 200, b: 200, a: 255)
    EndDrawing()
}

func main() {
    InitWindow(width: 800, height: 450, title: "Rae Raylib Basic")
    
    loop WindowShouldClose() is 0 {
        game_frame()
    }
    
    CloseWindow()
}

type Box(T) {
  value: T
}

func setValue(T)(b: mod Box(T), val: T) {
  b.value = val
}

func main() {
  # Int Box
  def b: Box(Int) = Box(Int) { value: 42 }
  log(b.value)
  setValue(b, val: 100)
  log(b.value)

  # Float Box
  def bf: Box(Float) = Box(Float) { value: 3.14 }
  log(bf.value)
  setValue(bf, val: 2.718)
  log(bf.value)

  # String Box
  def bs: Box(String) = Box(String) { value: "hello" }
  log(bs.value)
  setValue(bs, val: "world")
  log(bs.value)
}

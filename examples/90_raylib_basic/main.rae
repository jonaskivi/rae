import raylib

func main() {
  initWindow(width: 800, height: 450, title: "Rae Raylib Basic")
  
  def white: Color = { r: 255, g: 255, b: 255, a: 255 }
  def gray: Color = { r: 200, g: 200, b: 200, a: 255 }

  loop windowShouldClose() is 0 {
    beginDrawing()
    clearBackground(color: white)
    drawText(
      text: "Hello from Rae + Raylib!",
      x: 190.0,
      y: 200.0,
      fontSize: 20.0,
      color: gray,
    )
    endDrawing()
  }
  closeWindow()
}

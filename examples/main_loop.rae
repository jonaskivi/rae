# Main loop demo: run a fixed number of ticks to simulate a loop you can exit.
func mainLoop(step: Int, max: Int) {
  log("Main loop tick")
  log(step)
  if step < max {
    mainLoop(step: step + 1, max: max)
  } else {
    log("Main loop exit")
  }
}

func main() {
  log("Main loop demo start")
  mainLoop(step: 1, max: 4)
  log("Main loop demo end")
}
